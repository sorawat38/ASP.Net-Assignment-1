@model IEnumerable<InlandMarinaData.Slip>

@{
    ViewData["Title"] = "Filtered List";
}

<div class="container mt-5">
    <h1>Unleased Slips</h1>
    <hr/>

    <form asp-action="Index" method="post">
        <p>
            <select class="form-select" aria-label="Default select dock" name="id" asp-items="@ViewBag.Dock" onchange="this.form.submit()"></select>
        </p>
    </form>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dock)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Width)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dock.Name)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
